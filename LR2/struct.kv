#:kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex
#:import sp kivy.metrics.sp

<WindowManager>:
	MenuScreen:
	SearchScreen:
		id: search_scr
	DeleteScreen:
		id: delete_scr
	AddScreen:
		id: add_scr
	DataScreen:
		id: data_scr

<DataScreen>:
	name:'info'
	canvas.before:
        Color:
            rgba: hex("#00ebd8")
        Rectangle:
            size: self.size
            pos: self.pos
	ActionBar:
    BoxLayout:
		orientation:'vertical'
		padding:10
		GridLayout:
			size_hint:1,0.06
		AnchorLayout:
			id: data_layout
			pos_hint:{'center_x':.5,'center_y':.5}
			size_hint:1,0.7

<MenuScreen>:
	name:'table'
	canvas.before:
    	Color:
            rgba: hex("#00ebd8")
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
		spacing: 5
		orientation:'vertical'
		MainWidget:

<SearchScreen>:
	name:'search'
	tournaname: tournaname
	date: date
	sport: sport
	winner: winner
	maxprize: maxprize
	minprize: minprize
	maxgain: maxgain
	mingain: mingain 
	canvas.before:
        Color:
            rgba: 0, 0 ,0 , 0
        Rectangle:
            size: self.size
            pos: self.pos
	ActionBar:
	BoxLayout:
		cols:1
		spacing: 5
		orientation:'vertical'
		GridLayout:
			size_hint: 1, 0.06
			row_force_default: True
		AnchorLayout:
			id: data_search
			pos_hint:{'center_x':.5,'center_y':.5}
			size_hint:1, 0.25
		GridLayout:
			size_hint:1,0.35
			spacing:0,5
			padding: 20
			cols: 1
			GridLayout:
				spacing:5,5
				padding: 1
				cols: 2
				rows: 8
				row_force_default: True
				row_default_height: 30
				row_default_weight: 40
			    ColorfulLabel:
				    background_color: 1, 0, 0.1, 0.5
					text: "Tournament name"
				TextInput:
					id: tournaname
				ColorfulLabel:
				    background_color: 1, 0.5, 0, 0.5
					text: "Date"
				TextInput:
					id:date
				ColorfulLabel:
					background_color: 1, 1, 0, 0.5
					text: "Sport"
				TextInput:
					id:sport
				ColorfulLabel:
					background_color: 0.5, 1, 0, 0.47
					text: "Winner"
				TextInput:
					id:winner
				ColorfulLabel:
					background_color: 0, 1, 0.5, 0.5
					text: "Min prize"
				TextInput:
					id:minprize
				ColorfulLabel:
					background_color: 0, 0.4, 1, 0.5
					text:"Max prixe"
				TextInput:
					id:maxprize
				ColorfulLabel:
					background_color: 0.2, 0, 1, 0.5
					text:"Min winner's gain"
				TextInput:
					id:mingain
				ColorfulLabel:
					background_color: 0.6, 0, 1, 0.5
					text:"Max winner's gain"
				TextInput:
					id:maxgain
			Button:
			    theme_text_color: 'Custom'
				color: 0, 0, 0, 1
				font_name: 'Comic'
			    background_normal: ''
				background_color: 1, 0.1, 1, 0.9
				size_hint: 0.1, 0.2
				text:"Search"			
				on_press: 
					root.search_button()
					app.load_search_table()


<DeleteScreen>:
	name:'delete'
	tournaname: tournaname
	date: date
	sport: sport
	winner: winner
	maxprize: maxprize
	minprize: minprize
	maxgain: maxgain
	mingain: mingain 
	canvas.before:
        Color:
            rgba: 0, 0 ,0 , 0
        Rectangle:
            size: self.size
            pos: self.pos
	ActionBar:
	BoxLayout:
		cols:1
		spacing: 5
		orientation:'vertical'
		AnchorLayout:
			id: data_delete
			pos_hint:{'center_x':.5,'center_y':.5}
			size_hint:0.7,0.3
		GridLayout:
			spacing:0,5
			size_hint:1,0.5
			padding: 20
			cols: 1
			GridLayout:
				spacing:5,5
				cols: 2
				rows: 8
				row_force_default: True
				row_default_height: 30
				row_default_weight: 20
				ColorfulLabel:
				    background_color: 1, 0, 0.1, 0.5
					text: "Tournament name"
				TextInput:
				    font_name: 'Comic'
					id: tournaname
				ColorfulLabel:
				    background_color: 1, 0.5, 0, 0.5
					text: "Date"
				TextInput:
					id:date
				ColorfulLabel:
					background_color: 1, 1, 0, 0.5
					text: "Sport"
				TextInput:
					id:sport
				ColorfulLabel:
					background_color: 0.5, 1, 0, 0.47
					text: "Winner"
				TextInput:
					id:winner
				ColorfulLabel:
					background_color: 0, 1, 0.5, 0.5
					text: "Min prize"
				TextInput:
					id:minprize
				ColorfulLabel:
					background_color: 0, 0.4, 1, 0.5
					text:"Max prixe"
				TextInput:
					id:maxprize
				ColorfulLabel:
					background_color: 0.2, 0, 1, 0.5
					text:"Min winner's gain"
				TextInput:
					id:mingain
				ColorfulLabel:
					background_color: 0.6, 0, 1, 0.5
					text:"Max winner's gain"
				TextInput:
					id:maxgain
            Button:
			    theme_text_color: 'Custom'
				color: 0, 0, 0, 1
				font_name: 'Comic'
			    background_normal: ''
				background_color: 1, 0.1, 1, 0.9
				size_hint: 0.2, 0.15
				text:"delete"			
				on_press: 
					root.delete_button()
					app.load_table()	
					app.change_screen('info')

<AddScreen>:
	name:'add'
	tournaname: tournaname
	date: date
	sport: sport
	winner: winner
	prize: prize
	canvas.before:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            size: self.size
            pos: self.pos
	ActionBar:
	BoxLayout:
		cols:1
		spacing: 5
		orientation:'vertical'
		AnchorLayout:
			id: data_delete
			pos_hint:{'center_x':.5,'center_y':.5}
			size_hint:0.7,0.3
		GridLayout:
			spacing:0,5
			size_hint:1,0.5
			padding: 20
			cols: 1
			GridLayout:
				spacing:5,5
				cols: 2
				rows: 6
				row_force_default: True
				row_default_height: 30
				row_default_weight: 20
				ColorfulLabel:
				    background_color: 1, 0.1, 0.1, 0.65
					text: "Tournament name"
				TextInput:
					id: tournaname
				ColorfulLabel:
				    background_color: 1, 1, 0.1, 0.5
					text: "Date"
				TextInput:
					id:date
				ColorfulLabel:
					background_color: 0, 1, 0.1, 0.5
					text: "Sport"
				TextInput:
					id:sport
				ColorfulLabel:
					background_color: 0.1, 0.2, 0.9, 0.5
					text: "Winner"
				TextInput:
					id:winner
				ColorfulLabel:
					background_color: 0.5, 0.1, 0.8, 0.5
					text:"Prize"
				TextInput:
					id:prize

			Button:
			    theme_text_color: 'Custom'
				color: 0, 0, 0, 1
				font_name: 'Comic'
			    background_normal: ''
				background_color: 1, 0.1, 1, 0.9
				size_hint: 0.2, 0.15
				text:"add"			
				on_press: 
					root.add_button()
					app.load_table()	
					app.change_screen('info')

<ActionBar>:
    pos_hint: {'top':1}
    ActionView:
		canvas.before:
			Color:
				rgba: 1, 1, 1, 1
			Rectangle:
				pos: self.pos
				size: self.size	
        use_separator: True
        ActionPrevious:
            title: 'Options'
            with_previous: False
        
        ActionButton:
			theme_text_color: 'Custom'
			color: 0,0,0,1
			font_name: 'Comic'
            text: 'Table'
			canvas.before:
				Color:
					rgba: 0, 1, 0.7, 1
				Rectangle:
					pos: self.pos
					size: self.size	
            on_release: 
				app.load_table()
				app.change_screen('info')
        ActionButton:
			id: search_button
			theme_text_color: 'Custom'
			color: 0,0,0,1
			font_name: 'Comic'
            text: 'Search'
			background_normal: ''
			background_color: 0.1, 0.1, 1, 0.7
			on_press: 
				app.change_screen('search')
				
        ActionButton:
		    theme_text_color: 'Custom'
			color: 0,0,0,1
			font_name: 'Comic'
            text: 'Delete'
			canvas.before:
				Color:
					rgba: 0.6, 0, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size	
			on_press: 
				app.change_screen('delete')
				
        ActionButton:
		    theme_text_color: 'Custom'
			color: 0, 0, 0, 1
			font_name: 'Comic'
			canvas.before:
				Color:
					rgba: 0.9, 0, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size	
            text: 'Add'
            on_press: 
				app.change_screen('add')

<MainWidget>	
	id: main
	GridLayout:
		spacing:0,5
		padding: 20
		cols: 1
	Button:
	    background_normal: ''
		background_color: 0.5, 0.1, 0.8, 0.7
		size_hint: 1, 1
		pos_hint:{'center_x':.5,'center_y':.5}
		text:"press any key to continue"	
		font_name: 'Comic'
		font_size: 50
		on_press:		
			app.load_table()
			app.change_screen('info')

<ColorfulLabel>:
	background_normal: ''
	background_color: 1, 0.5, 0, 0.5
	theme_text_color: 'Custom'
	color: 0,0,0,1
	font_name: 'Comic'
	canvas.before:
		Color:
			rgba: root.background_color
		Rectangle:
			pos: self.pos
			size: self.size	